<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/bar_layout_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <include layout="@layout/toolbar"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/bar_layout_full">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dp"
            tools:ignore="RtlSymmetry">

            <RadioButton
                android:id="@+id/money_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/accent"
                android:layout_marginBottom="10dp"
                />

            <RadioButton
                android:id="@+id/money_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/accent"
                android:layout_marginBottom="10dp"
                />

            <RadioButton
                android:id="@+id/date_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/accent"
                android:layout_marginBottom="10dp"
                />

            <RadioButton
                android:id="@+id/date_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/accent"
                android:layout_marginBottom="10dp"
                />

        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_money_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:text="Сначала минимальные"
                android:textColor="@color/colorBlackDark" />

            <TextView
                android:id="@+id/text_money_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:text="Сначала максимальные"
                android:textColor="@color/colorBlackDark"
                android:layout_below="@+id/text_money_min"/>

            <TextView
                android:id="@+id/text_date_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:text="Новые сверху"
                android:textColor="@color/colorBlackDark"
                android:layout_below="@+id/text_money_max"/>

            <TextView
                android:id="@+id/text_date_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_date_min"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="21dp"
                android:text="Старые сверху"
                android:textColor="@color/colorBlackDark"
                android:textSize="16sp" />



        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>